<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="addr" class="Address">
		<constructor-arg value="678567"></constructor-arg>
		<constructor-arg value="Mumbai"></constructor-arg>
	</bean>
	
	<bean id="stud" class="Student">
		<property name="id" value="23"></property>
		<property name="name" value="Abcd"></property>
		<property name="address" ref="addr"></property>
	</bean>


</beans>